<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/header') %>
</head>

<body>
    <%- include('partials/navigation') %>

    <div class="container">
        <div class="row">
            <% developers.forEach(function(developer){ %>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <%= developer.nombres_completos %>
                    </div>
                    <div class="card-body">
                        <%= developer.link_github %>
                    </div>
                    <div class="card-body">
                        <%= developer.tecnologias_conocidas %>
                    </div>
                    <div class="card-footer">
                        <form action="/developers/<%= developer.id %>?_method=DELETE" method="POST">
                            <a href="/edit/<%= developer.id %>" class="btn btn-success">Editar registro</a>
                            <input type="submit" value="Eliminar" class="btn btn-danger">
                        </form>
                    </div>
                </div>
            </div>
            <% }); %>
 
        </div>
    </div>
</body>

</html>